{
    "name": "Iowa Election Data Project",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "ms-toolsai.vscode-jupyter-cell-tags"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "jupyter.askForKernelRestart": false
            }
        }
    },

    "forwardPorts": [8888],

    "portsAttributes": {
        "8888": {
            "label": "Jupyter",
            "onAutoForward": "notify"
        }
    },

    "postCreateCommand": "echo 'âœ… Environment ready! Open the .ipynb file to start.'"
}
